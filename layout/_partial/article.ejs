<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate() %>"><a data-pjax href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>

      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comment || config.disqus_shortname){ %>
        <div class="alignright">
          <a href="<%- config.root %><%- item.path %>#comments" class="comment-link" style="margin-left: 20px">Comments</a>
        </div>
        <% } %>
      <% } else { %>
        <%- partial('post/category') %>

        <%- partial('post/share') %>
      <% } %>
      <div style="float: right">
        <div  style="alignright" class="viewcount" id="<%= item.path%>">0</div>
      </div>
      <%- partial('post/tag') %>

      <div class="clearfix"></div>
    </footer>
  </div>
  <style type="text/css">
    
    article footer div.viewcount:before {
      font: 1.1em FontAwesome;
      padding-right: 10px;
      vertical-align: middle;
      content: '\f06e';
    }
  
  </style>
</article>

<%- partial('comment') %>
